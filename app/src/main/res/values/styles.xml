<resources>

    <style name="Widget.Theme.BanaMusic.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.BanaMusic.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="CustomBottomNavStyle"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@null</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@style/NoActiveIndicator</item>
    </style>

    <style name="NoActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
</resources>