<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <!-- 首页Fragment -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.guet.stu.banamusic.view.MainFragment"
        android:label="首页" >
        <action
            android:id="@+id/action_mainFragment_to_musicPlayerFragment"
            app:destination="@id/musicPlayerFragment" />
    </fragment>
    
    <!-- 专辑列表Fragment -->
    <fragment
        android:id="@+id/albumListFragment"
        android:name="com.guet.stu.banamusic.view.AlbumListFragment"
        android:label="专辑列表" >
        <argument
            android:name="albumType"
            app:argType="integer" />
        <action
            android:id="@+id/action_albumListFragment_to_musicPlayerFragment"
            app:destination="@id/musicPlayerFragment" />
    </fragment>
    
    <!-- 用户中心Fragment -->
    <fragment
        android:id="@+id/userFragment"
        android:name="com.guet.stu.banamusic.view.UserFragment"
        android:label="我的" />
    
    <!-- 音乐播放器Fragment -->
    <fragment
        android:id="@+id/musicPlayerFragment"
        android:name="com.guet.stu.banamusic.view.MusicPlayerFragment"
        android:label="音乐播放器" >
        <argument
            android:name="music"
            app:argType="com.guet.stu.banamusic.model.music.Music" />
    </fragment>
        
</navigation>